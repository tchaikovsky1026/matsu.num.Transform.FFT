<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc">
    <target name="javadoc">
        <javadoc access="protected" 
        	encoding="UTF-8"
        	charset="UTF-8"
        	
        	
        	destdir="javadoc-file" 
        	nodeprecated="false" 
        	nodeprecatedlist="false" 
        	noindex="false" 
        	nonavbar="false" 
        	notree="false" 
        	splitindex="true" 
        	use="true" 

        	source="17" 
        	author="true" 
        	version="true"
        	sourcepath="src" 

        	additionalparam="--module-path '../dist-num'" 
        	packagenames="matsu.num.transform.fft,
        	matsu.num.transform.fft.dto,
        	matsu.num.transform.fft.dctdst,
        	matsu.num.transform.fft.convolution"
        />
        
        <!-- 
        	author, version: javadocにauthorとversionを含むかどうか
        	sourcepath: ソースファイルのルート(testフォルダを含んではいけない), セミコロン区切り
        	packagenames: javadocに含めるパッケージ名, カンマ区切り
        	additionalparamでモジュールパスを指定する, シングルクオーテーションで囲んだほうが良い
        -->

    </target>
</project>
